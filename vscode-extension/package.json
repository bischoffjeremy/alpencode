{
  "name": "alpencode",
  "displayName": "AlpenCode",
  "description": "Swiss German Voice-to-Code Dictation",
  "version": "0.0.3",
  "icon": "cow.png",
  "publisher": "Bischoff-Ventures",
  "repository": {
    "type": "git",
    "url": "https://github.com/bischoffjeremy/alpencode.git"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "alpencode.start",
        "title": "AlpenCode: Start Dictation"
      },
      {
        "command": "alpencode.stop",
        "title": "AlpenCode: Stop Dictation"
      },
      {
        "command": "alpencode.settings",
        "title": "AlpenCode: Settings & Calibration"
      },
      {
        "command": "alpencode.calibrate",
        "title": "AlpenCode: Calibrate Microphone"
      },
      {
        "command": "alpencode.resetEnv",
        "title": "AlpenCode: Reset Environment"
      }
    ],
    "configuration": {
      "title": "AlpenCode",
      "properties": {
        "alpencode.pythonPath": {
          "type": "string",
          "default": "python3",
          "description": "Path to the Python interpreter (e.g. 'python3', 'uv run python', or absolute path)"
        },
        "alpencode.autoEnter": {
          "type": "boolean",
          "default": false,
          "description": "Automatically press Enter after inserting transcribed text."
        }
      }
    },
    "keybindings": [
      {
        "command": "alpencode.toggle",
        "key": "alt+s",
        "mac": "alt+s"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.16.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "@vscode/test-electron": "^2.3.2"
  }
}
